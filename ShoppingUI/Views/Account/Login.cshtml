@model ShoppingUI.Models.ViewModels.Accountig.LoginViewModel


@{
    var mesUser = ViewData["MessageUserName"];
    var mesPass = ViewData["MessagePassword"];
}

<h1>LogIn</h1> 
@if(mesUser is not null)
{
    <div class="alert alert-danger" role="alert">
      @mesUser
    </div>

}
@if(mesPass is not null)
{
    <div class="alert alert-danger" role="alert">
      @mesPass
    </div>

}


<div class = "container">
    <div class="row">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-sm-6">
                <label asp-for="UserName" class="form-label"> </label>
                <input asp-for="UserName"  class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"> </span>
            </div>

            <div class="col-sm-6">
                <label asp-for="Password" class="form-label"> </label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"> </span>
            </div>

            <div class="col-sm-6">
                <label asp-for="IsRememberMe" class="form-label"> </label>
                <input asp-for="IsRememberMe"  class="form-check-input" />
                <span asp-validation-for="IsRememberMe" class="text-danger"> </span>
            </div>

                <input asp-for="ReturnUrl" type="hidden" class="form-control" />


            <br />
            <div class="col-sm-6">

                <input type="submit" class="btn-success btn form-control" value="Login"  />

            </div>
        </form>
    </div>
</div>